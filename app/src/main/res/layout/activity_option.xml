<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OptionActivity"
    android:background="?attr/colorOptionBackground">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dimen_standard_6x"
        android:layout_height="@dimen/icon_size_medium"
        android:layout_marginTop="@dimen/dimen_standard_2x"
        android:background="@drawable/option_back_bacground"
        android:paddingStart="@dimen/dimen_standard"
        android:paddingEnd="@dimen/dimen_standard_2x"
        android:src="@drawable/ic_back"
        tools:ignore="ContentDescription,RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_option"
        tools:text="Setting"
        android:layout_toEndOf="@id/btn_back"
        android:layout_marginStart="@dimen/dimen_standard_2x"
        android:layout_marginTop="36dp"
        android:textColor="?attr/colorOptionTitle"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold"
        android:fontFamily="@font/amiko"/>

    <FrameLayout
            android:id="@+id/fragment_holeder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_standard_2x"
            android:layout_below="@id/btn_back"
            android:layout_marginTop="@dimen/dimen_standard_2x"/>

    <com.ldoublem.loadingviewlib.view.LVEatBeans
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:background="#BB000000"
        android:visibility="gone"/>

</RelativeLayout>