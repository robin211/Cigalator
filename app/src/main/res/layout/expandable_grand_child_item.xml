<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dimen_standard"
    android:paddingBottom="@dimen/dimen_standard"
    android:id="@+id/grand_child_holder">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textColor="?attr/colorStatisticText"
        tools:text = "23:34"
        android:textStyle="normal"
        android:layout_marginStart="@dimen/dimen_standard_2x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reason"
        android:textColor="?attr/colorStatisticText"
        tools:text = "Saw other people"
        android:textStyle="normal"
        android:layout_marginEnd="@dimen/dimen_standard_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mood_event"
        android:textColor="?attr/colorStatisticText"
        tools:text = "Event:"
        android:textStyle="normal"
        android:layout_marginEnd="@dimen/dimen_standard"
        app:layout_constraintEnd_toStartOf="@+id/reason"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>