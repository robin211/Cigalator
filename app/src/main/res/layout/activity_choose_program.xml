<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChooseProgramActivity"
    android:background="?attr/colorChooseProgramBackgroundTop"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/relaxed_holder">
        <ImageView
            android:id="@+id/border_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rect_choose_program_relaxed"
            android:layout_marginStart="@dimen/dimen_standard_8x"
            android:layout_marginEnd="@dimen/dimen_standard_2x"
            android:layout_marginTop="@dimen/dimen_standard_5x"
            android:layout_marginBottom="@dimen/dimen_standard_5x"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/relaxed_icon"
            android:layout_width="@dimen/icon_size_big"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_relaxediconspaced"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_standard_2x"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/relaxed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relaxed"
            android:fontFamily="@font/amiko"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/dimen_standard_7x"
            android:textSize="@dimen/text_size_big"
            android:textColor="?attr/colorChooseProgramTextRelaxedTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_standard_5x"
            tools:ignore="RelativeOverlap" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relaxed"
            android:layout_marginEnd="@dimen/dimen_standard_5x"
            android:layout_toEndOf="@id/relaxed_icon"
            android:orientation="vertical"
            android:layout_above="@id/btn_relaxed"
            android:layout_marginBottom="@dimen/dimen_standard">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramTextRelaxedOne"
                android:layout_marginBottom="@dimen/dimen_standard"
                android:text="@string/you_decide_how_many_cigarettes_you_re_allowed_per_day" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramTextRelaxedTwo"
                android:gravity="end|center_vertical"
                android:text="@string/that_amount_will_stay_the_same_until_you_decide_to_reduce_them"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramTextRelaxedThree"
                android:layout_marginTop="@dimen/dimen_standard"
                android:text="@string/for_when_you_just_want_to_cut_back_on_cigarettes_or_want_to_stop_at_your_own_pace"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/btn_relaxed"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/border_top"
            android:layout_alignEnd="@id/border_top"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/rippled_leaf_right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramButtonOkRelaxedText"
                android:text="@string/lets_go"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/targeted_holder"
        android:background="@drawable/choose_program_background_bottom">
        <ImageView
            android:id="@+id/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rect_choose_program_targeted"
            android:layout_marginEnd="@dimen/dimen_standard_8x"
            android:layout_marginStart="@dimen/dimen_standard_2x"
            android:layout_marginTop="@dimen/dimen_standard_5x"
            android:layout_marginBottom="@dimen/dimen_standard_5x"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/targeted_icon"
            android:layout_width="@dimen/icon_size_big"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_targetediconspaced"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_standard_2x"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/targeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/targeted"
            android:fontFamily="@font/amiko"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/dimen_standard_7x"
            android:textSize="@dimen/text_size_big"
            android:textColor="?attr/colorChooseProgramTextTargetedTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_standard_5x"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/targeted"
            android:layout_marginStart="@dimen/dimen_standard_5x"
            android:layout_toStartOf="@id/targeted_icon"
            android:orientation="vertical"
            android:layout_above="@id/btn_targeted"
            android:layout_marginBottom="@dimen/dimen_standard">
            <TextView
                android:id="@+id/txt11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramTextTargetedOne"
                android:layout_marginBottom="@dimen/dimen_standard"
                android:text="@string/tageted_desc_one" />
            <TextView
                android:id="@+id/txt22"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramTextTargetedTwo"
                android:gravity="center_vertical"
                android:text="@string/targeted_desc_two"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramTextTargetedThree"
                android:layout_marginTop="@dimen/dimen_standard"
                android:text="@string/targeted_desc_three"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_targeted"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/border_bottom"
            android:layout_alignStart="@id/border_bottom"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/rippled_leaf_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiko"
                android:textColor="?attr/colorChooseProgramButtonOkTargetedText"
                android:text="@string/im_in"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>